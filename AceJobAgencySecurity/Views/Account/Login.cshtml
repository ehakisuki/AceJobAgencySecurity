@model AceJobAgencySecurity.Models.LoginViewModel

<h2>Login</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (ViewData.ModelState[""] != null)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>
}

<form method="post" asp-action="Login">
    @Html.AntiForgeryToken()

    <div>
        <label for="Email">Email</label>
        <input type="email" id="Email" name="Email" value="@Model.Email" required />
    </div>

    <div>
        <label for="Password">Password</label>
        <input type="password" id="Password" name="Password" required />
    </div>

    <button type="submit">Login</button>
</form>

<p>Don't have an account? <a href="@Url.Action("Register", "Account")">Register here</a>.</p>



